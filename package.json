    "chai": "^4.2.0",
    "husky": "^3.1.0",
    "mocha": "^7.0.1",
    "nock": "^11.7.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.0",
    "sinon": "^8.1.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5"
  },
